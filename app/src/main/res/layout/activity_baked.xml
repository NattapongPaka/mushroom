<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_hh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชม"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_hh"
        app:layout_constraintVertical_bias="0.714" />

    <TextView
        android:id="@+id/txt_mm"
        android:layout_width="25dp"
        android:layout_height="17dp"
        android:text="นาที"
        app:layout_constraintStart_toEndOf="@+id/txt_hh"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.76" />

    <EditText
        android:id="@+id/edt_hh"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginStart="-8dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/edt_mm"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="119dp" />

    <EditText
        android:id="@+id/edt_mm"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_hh"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="119dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="180dp"
        android:id="@+id/space" />

    <TextView
        android:id="@+id/txt_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อุหภูมิ"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="193dp" />

    <TextView
        android:id="@+id/txt_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ความชื่น"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="193dp" />

    <EditText
        android:id="@+id/edt_temp"
        android:layout_width="186dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/edt_humidity"
        android:layout_width="184dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="235dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เริ่ม"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="393dp" />

</android.support.constraint.ConstraintLayout>